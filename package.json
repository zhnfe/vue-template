{
    "name": "vue-template",
    "type": "module",
    "version": "0.0.0",
    "private": true,
    "engines": {
        "node": ">=22.0.0",
        "pnpm": ">=10.0.0"
    },
    "scripts": {
        "dev": "vite",
        "preview": "vite preview",
        "build": "node scripts/build.ts",
        "type-check": "vue-tsc -b",
        "lint": "eslint --fix",
        "postinstall": "simple-git-hooks"
    },
    "dependencies": {
        "@material-symbols/svg-400": "^0.38.0",
        "es-toolkit": "^1.44.0",
        "naive-ui": "^2.43.2",
        "pinia": "^3.0.4",
        "sortablejs": "^1.15.6",
        "tailwindcss": "^4.1.18",
        "vue": "latest",
        "vue-draggable-plus": "^0.6.1",
        "vue-router": "latest"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^7.2.0",
        "@tailwindcss/vite": "^4.1.18",
        "@tsconfig/node22": "^22.0.5",
        "@types/node": "^22.19.7",
        "@types/sortablejs": "^1.15.9",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vitejs/plugin-vue-jsx": "^5.1.3",
        "@vue/tsconfig": "^0.7.0",
        "eslint": "^9.39.2",
        "eslint-plugin-format": "^1.3.1",
        "lint-staged": "^16.2.7",
        "npm-run-all2": "^8.0.4",
        "simple-git-hooks": "^2.13.1",
        "typescript": "~5.9.3",
        "unplugin-vue-components": "^0.27.5",
        "vite": "^7.3.1",
        "vue-tsc": "^3.2.4"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild",
            "simple-git-hooks",
            "vue-demi"
        ],
        "ignoredBuiltDependencies": [
            "@tailwindcss/oxide"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "npx run-p lint type-check"
    },
    "lint-staged": {
        "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --fix"
    }
}
