{
    "name": "vue-template",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "preview": "vite preview",
        "build": "run-p lint-only type-check build-only",
        "build-only": "vite build",
        "type-check": "vue-tsc --build --force",
        "lint": "eslint --fix",
        "lint-only": "eslint --quiet",
        "postinstall": "simple-git-hooks"
    },
    "engines": {
        "node": ">=22.0.0",
        "pnpm": ">=9.0.0"
    },
    "dependencies": {
        "es-toolkit": "^1.32.0",
        "naive-ui": "^2.41.0",
        "pinia": "^2.3.0",
        "tailwindcss": "^4.0.13",
        "vue": "latest",
        "vue-router": "latest",
        "vuedraggable": "^4.1.0"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^4.2.0",
        "@tailwindcss/vite": "^4.0.13",
        "@tsconfig/node22": "^22.0.0",
        "@types/node": "^22.10.6",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitejs/plugin-vue-jsx": "^4.1.1",
        "@vue/eslint-config-typescript": "^14.3.0",
        "@vue/tsconfig": "^0.7.0",
        "eslint": "^9.18.0",
        "eslint-plugin-vue": "^10.0.0",
        "lint-staged": "^15.3.0",
        "npm-run-all2": "^6.2.6",
        "simple-git-hooks": "^2.11.1",
        "typescript": "~5.7.3",
        "unplugin-vue-components": "^0.27.5",
        "vite": "^6.0.7",
        "vue-tsc": "^2.2.0"
    },
    "lint-staged": {
        "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "eslint --fix"
    },
    "simple-git-hooks": {
        "pre-commit": "npx run-p lint type-check"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild",
            "simple-git-hooks",
            "vue-demi"
        ]
    }
}